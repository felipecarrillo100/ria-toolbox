{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "skipLibCheck": false,
    "strict": true,
    // esModuleInterop is necessary for "import React from 'react'",
    "esModuleInterop": true,
    "jsx": "preserve",
    "types": [
      "react",
      "react-dom",
      // needed by Recorder tool for VideoEncoder API
      "dom-webcodecs"
    ]
  }
}